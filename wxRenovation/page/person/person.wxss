
.picker{
  height: 80rpx;
  line-height: 80rpx;
  background-color: #fff;
  text-align: center;
}
.product-list,.person-list{
  display: flex;
  flex-flow:row wrap;
  align-items:center;
  justify-content: space-between;
}
.product{
  padding: 20rpx 30rpx;
  margin-top: 20rpx;
  background-color: #fff;
}
.product-list{
  margin-top: 20rpx;
  display: flex;
  flex-flow:row wrap;
  align-items:center;
  justify-content: space-between;
}
.product-item{
  width: 48%;
  margin-top: 30rpx;
}
.product-item image{
  height: 320rpx;
  width: 100%;
  background-color:#efefef;
  box-shadow:4rpx 12rpx 16rpx #bbb;
}
.person-item{
  width: 100%;
  margin-top: 30rpx;
  overflow: hidden;
}
.person-item image{
  float: left;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
}
.person-content{
  width: 70%;
  float: left;
  margin-top: 18rpx;
  margin-left: 30rpx;
}
.noData{
  width:36%;
  margin:20% 32%;
  height:300rpx;
}