/**app.wxss**/
.container {
  height: 100%;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 


/*公共样式*/
page{
  background-color: #f2f2f2;
  font-size:30rpx;
  line-height: 1.5;
  color: #222;
}

/*公共颜色*/
.color_22{color: #222;}
.color_33{color: #333;}
.color_66{color: #666;}
.color_99{color: #999;}
.color_55{color:#069e55}
.color_19{color:#191919;}
.color_cf{color:#2072cf;}
.color_f2{color:#f2f2f2}
/*背景颜色*/
.bg_eb{background: #ebebeb;}
.bg_f7{background-color: #f4f5f7}
