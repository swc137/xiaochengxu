/* pages/newcard/newcard.wxss */

.container1{
    /*padding-bottom:150rpx;*/
    font-size: 30rpx;
    min-height: 100%;
    height: auto;
}
.banner{
    height: 30rpx;
    line-height: 150rpx;
    text-align: center;
    color:#2072cf;
    /*border: 2rpx solid #999;*/
    border-bottom: 2rpx solid #e8e8e8;
}
.row{
    padding:0 30rpx 0;
    background-color: #fff;
    border-bottom: 2rpx solid #e8e8e8;
}
.row,input,picker,switch,.fr{
    height: 100rpx;
    line-height: 100rpx;
}
switch{
    padding: 20rpx;
    box-sizing: border-box;
}
.row text{
    float: left;
    width: 30%;
    color:#222;
}
input,picker,switch,.fr{
    float: right;
    width: 70%;
    overflow: hidden;/*文字超长截断加点*/
}
button{
    background-color: #2072cf;
    height: 80rpx;
    line-height: 80rpx;
    border-radius:40rpx;
    color: #fff;
    margin: 60rpx 30rpx 30rpx;
}
.input_verify{
    float: right;
}
.btn_verify.disable{
    color:#ccc;
}