/* pages/attach/attach.wxss */
.container1{
    padding-bottom:50rpx;
    font-size: 30rpx;
}
.top_image{
    width: 100%; 
    height: 180rpx; 
    background-color: #eeeeee;
}
.banner{
    height: 180rpx;
    line-height: 180rpx;
    text-align: center;
    border: 2rpx solid #999;
}
.row{
    padding:0 30rpx 0;
    background-color: #fff;
    overflow: hidden;
    color:#222;
}
.row,input,picker,switch,.fr{
    height: 100rpx;
    line-height: 100rpx;
}
switch{
    box-sizing: border-box;
}
.row .row_l{
    float: left;
    width: 40%;
}
.row .row_r{
    float: left;
    width: 60%;
}
.row .row_code{
    float: left;
    width: 35%;
}
.row_r input,.row_code input{
    width: 100%;
}
input,picker,switch,.fr{
    float: left;
    width: 55%;
    overflow: hidden;/*文字超长截断加点*/
}
/*黑色闪框*/
.bubble_box{
    position: fixed;
    top:0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;
    width: 80%;
    height: 70rpx;
    line-height: 70rpx;
    background-color: rgba(0,0,0,0.6);
    font-size: 30rpx;
    color: #fff;
    text-align: center;
    border-radius: 15rpx;
    z-index: 3;
}




