/*产品图*/
swiper{
  height: 400rpx;
}
.swiper-img{
  width: 100%;
  height: 100%;
}

/*优惠券*/
.coupon{
  background: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}
.coupon-list{
  display: flex;
  flex-flow:row wrap;
  align-items:center;
  justify-content: space-between;
}
.coupon-list image{
  margin-top: 20rpx;
  width: 31%;
  height: 120rpx;
}
/*热门商品*/
.hot-product{
  background: #fff;
}

.m-banner{
  height: 260rpx;
}
.m-banner image{
  width: 100%;
  height: 100%;
}
/*产品*/
.product{
  background: #fff;
  margin-top: 20rpx;
}
.product-list{
  /* display: flex;
  flex-flow:row wrap;
  align-items:center;
  justify-content: space-between; */
  background-color: #fff;
}
.product-item{
  width: 100%;
  padding: 30rpx;
  position: relative;
  overflow: hidden;
  border-bottom: 2rpx solid #eee;
}
.product-item image{
  height: 200rpx;
  width: 36%;
  background-color:#efefef;
  border: 2rpx solid #ddd;
}
.item-content{
  width: 60%;
  font-size: 30rpx;
}
.item-price{
  position: absolute;
  left: 40%;
  bottom: 30rpx;
  font-size: 36rpx;
  color:#ffa200;
}
.loading{
  width: 100%;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  color: #999;
}
/*分类列表*/
.category-list{
  display: flex;
  flex-flow:row wrap;
  align-items:center;
  justify-content: space-between;
  padding: 30rpx 30rpx 0;
  background-color: #fff;
}
.category-list .category-item{
  margin-bottom: 30rpx;
  width: 48%;
  position: relative;
}
.category-list .category-item image{
  height: 320rpx;
  width: 100%;
  background-color:#efefef;
  border: 2rpx solid #ddd;
  display: block;
  box-sizing: border-box;
}
.category-item .category-txt{
  position: absolute;
  width: 100%;
  top: 0;
  text-align: center;
  line-height: 320rpx;
  color: #fff;
}
.category-item .category-overlay{
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.3;
  top: 0;
  left: 0;
}