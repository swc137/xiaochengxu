/*产品图*/
swiper{
  height: 400rpx;
}
.swiper-img{
  width: 100%;
  height: 100%;
}
/*优惠券*/
.coupon{
  background: #fff;
  padding: 20rpx 30rpx;
  margin-bottom: 20rpx;
}
.coupon-list{
  display: flex;
  flex-flow:row wrap;
  align-items:center;
  justify-content: space-between;
}
.coupon-list image{
  margin-top: 20rpx;
  width: 31%;
  height: 120rpx;
}
/*热门商品*/
.product-list{
  /* display: flex;
  flex-flow:row wrap;
  align-items:center;
  justify-content: space-between; */
  background-color: #fff;
}
.product-item{
  width: 100%;
  padding: 30rpx;
  position: relative;
  overflow: hidden;
  border-bottom: 2rpx solid #eee;
}
.product-item image{
  height: 200rpx;
  width: 36%;
  background-color:#efefef;
  border: 2rpx solid #ddd;
}
.item-content{
  width: 60%;
  font-size: 30rpx;
}
.item-price{
  position: absolute;
  left: 40%;
  bottom: 30rpx;
  font-size: 36rpx;
  color:#ffa200;
}
.loading{
  width: 100%;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  color: #999;
}
/*热门商品*/
.hot-product{
  background: #fff;
}

.m-banner{
  height: 260rpx;
  margin-bottom: 20rpx;
}
.m-banner image{
  width: 100%;
  height: 100%;
}
/*广告位图片*/
.ad-banner{
  margin-bottom: 20rpx;
  overflow: hidden;
}
.ad-banner image{
  background: #eee;
  width: 50%;
  display: block;
}
.ad1{
  height: 400rpx;
  border-right: 2rpx solid #ddd;
  box-sizing: border-box;
}
.ad2{
  height: 200rpx;
  border-bottom: 2rpx solid #ddd;
  box-sizing: border-box;
}
.ad3{
  height: 200rpx;
}
/*广告产品*/
.product-banner{
  background: #fff;
  display: flex;
  flex-flow:row wrap;
  align-items:center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
}
.prod-item{
  width: 31%;
}
.prod-item image{
  width: 100%;
  height: 200rpx;
  background: #eee;
}