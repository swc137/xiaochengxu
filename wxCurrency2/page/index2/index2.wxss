/*轮播图*/
swiper{
  height: 400rpx;
}
.swiper-img{
  width: 100%;
  height: 100%;
}

/*产品图*/
.goods-item{
  background: #fff;
  margin-top: 20rpx;
}
.goods-item image{
  width: 100%;
  height: 350rpx;
}
.goods-info{
  padding: 10rpx 30rpx;
}
.goods-bottom{
  overflow: hidden;
}
.goods-price{
  font-size: 32rpx;
  display: inline-block;
  margin-top: 8rpx;
}
.look{
  display: inline-block;
  padding: 6rpx 20rpx;
  background: #42ab49;
  color: #fff;
  border-radius: 10rpx;
}
/*热门商品*/
.product-list{
  background: #fff;
  margin-top: 20rpx;
  padding-top: 20rpx;
}
.product-list .pro-title{
  color: #42ab49;
  border-bottom: 4rpx solid #42ab49;
  padding-bottom: 4rpx;
  margin-left: 30rpx;
}
.list{
  display: flex;
  flex-flow:row wrap;
  align-items:center;
  justify-content: space-between; 
   padding: 30rpx 30rpx 0;
}
.product-item{
  width: 48%;
  padding-bottom: 20rpx;
}
.product-item image{
  width: 100%;
  height: 330rpx;
  background: #eee;
}