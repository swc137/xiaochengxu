swiper{
  height: 400rpx;
}
.swiper-img{
  width: 100%;
  height: 100%;
}

.news-more{
  float:right;
  color:#2072cf;
  text-decoration:underline;
}
.page-body-line{
  position:fixed;
  bottom:60rpx;
  right:20rpx;
  width:78rpx;
  height:78rpx;
  background-color: #2072cf;
  border-radius: 50%;
}
.page-body-line contact-button{
  position: absolute;
  top: 14rpx;
  left: 14rpx;
}
.product{
  padding: 20rpx 30rpx;
  background-color: #fff;
}
.product .title{
  border-left:6rpx solid #2072cf;
  padding-left:10rpx;
}
.product-list{
  display: flex;
  flex-flow:row wrap;
  align-items:center;
  justify-content: space-between;
}
.product-item{
  width: 48%;
  margin-top: 30rpx;
}
.product-item image{
  height: 320rpx;
  width: 100%;
  background-color:#efefef;
  box-shadow:4rpx 12rpx 16rpx #bbb;
}
.more{
  position: absolute;
  right: 30rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  color: #2072cf;
}