/*产品图*/
swiper{
  height: 400rpx;
  border-bottom: 2rpx solid #ddd;
}
.swiper-img{
  width: 100%;
  height: 100%;
}
.detail{
  padding: 20rpx 30rpx;
  background: #fff;
}
.title{
  font-size:32rpx;
  font-weight: 800;
  text-align: center;
  background: #fff;
  padding: 20rpx 0;
}
.content{
  margin: 30rpx 0;
}
.detail image{
  width: 100% !important;
  display:block;
  margin-bottom: 20rpx;
}
.detail-title{
  background: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 2rpx solid #ddd;
  padding: 0 30rpx;
  margin-top: 20rpx;
}
.detail-title text{
  padding-bottom: 20rpx;
  border-bottom: 6rpx solid #99ceee;
}