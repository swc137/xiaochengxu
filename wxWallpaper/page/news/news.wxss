.news{
  margin: 20rpx 30rpx 30rpx;
  padding: 0 30rpx;
  border: 2rpx solid #ddd;
  box-shadow: 2px 2px 2px #ddd;
  background-color: #FF6A6A;
  color: #fff;
}
.news-item{
  border-bottom: 2rpx solid #fff;
}
.news-item image{
  width: 100%;
  height: 320rpx;
}
.news-item .news-text{
  width:auto;
  padding: 18rpx 0;
}
.news-item:last-child{
  border-bottom: 0;
}
.news-more{
  text-align: center;
  margin: 10rpx 0; 
  color: #666;
}