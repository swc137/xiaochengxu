/*产品图*/
swiper{
  height: 400rpx;
  margin-bottom: 20rpx;
}
.swiper-img{
  width: 100%;
  height: 100%;
}
/*一行显示*/
.v-line{
  padding: 20rpx 60rpx 20rpx 30rpx;
  background-color: #fff;
  position: relative;
}
.v-title{
  font-size: 32rpx;
}
.v-icon{
  width: 44rpx;
  height: 44rpx;
  vertical-align: middle;
  margin-right: 6rpx;
}
.right-arrow {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  right: 30rpx;
  border: none;
  border-left: 0;
  border-bottom: 0;
  border-top: 1px solid #969696;
  border-right: 1px solid #969696;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}
.company_about{
  margin-bottom: 20rpx;
}
/*产品*/
.product{
  background: #fff;
  margin-top: 20rpx;
}
.product-list{
  display: flex;
  flex-flow:row wrap;
  align-items:center;
  justify-content: space-between;
  padding: 0 30rpx;
}
.product-item{
  width: 48%;
  margin-top: 30rpx;
}
.product-item image{
  height: 320rpx;
  width: 100%;
  background-color:#efefef;
  border: 2rpx solid #ddd;
}
.detail image{
  width: 100%;
  display: inherit;
}