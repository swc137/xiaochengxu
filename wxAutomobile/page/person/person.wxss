/* person.wxss */
.top-area{
  width: 100%;
  height: 360rpx;
  /* background: url('../../image/public/background.png') no-repeat center center;
  background-size: 100%; */
  text-align: center;
  position:relative;
}
.top-area .background{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 360rpx;
}
.top-area .head-logo{
  position: absolute;
  left:0;
  right:0;
  margin:auto;
  top:50rpx;
  width: 180rpx;
  height: 180rpx;
  z-index: 3;
}
.top-area text{
  color: #fff;
  position: absolute;
  left: 0;
  right: 0;
  top: 260rpx;
  font-size: 32rpx;
}
.btn-area .btn-register{
  width: 70%;
  height: 100rpx;
  background-color: #EDEDED;
  margin: 80rpx 15%;
  border-radius: 10rpx;
  position: relative;
}
.btn-area .btn-login{
  width: 70%;
  height: 100rpx;
  background-color: #3298FD;
  margin: 50rpx 15%;
  border-radius: 10rpx;
  position: relative;
}
.btn-register image,.btn-login image{
  width: 60rpx;
  height: 60rpx;
  margin: 20rpx 50rpx;
}
.btn-register text,.btn-login text{
  font-size: 36rpx;
  line-height: 100rpx;
  position: absolute;
  top:0;
  bottom: 0;
  margin: auto;
  left: 45%;
}
.btn-login text{
  color: #fff;
}
.menu-area{
  margin-top: 60rpx;
}
.menu-area .line{
  height:80rpx;
  line-height:80rpx;
  background-color:#fff;
  padding:0 30rpx;
  font-size:32rpx;
  margin-bottom: 20rpx;
}
.line image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 15rpx;
}
.line text{
  position:absolute;
  left:100rpx;
}