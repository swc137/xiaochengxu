<!--login.wxml-->
<view class="top-area">
  <image src="../../image/public/head-logo.png" class="head-logo"></image>
</view>
<form bindsubmit="formSubmit">
  <view class="reg_form">
    <view class="form_line">
      <text class="label">手机号：</text>
      <input type="number" placeholder="请输入用户名/手机号" name="username"/>
    </view>
    <view class="form_line">
      <text class="label">密码：</text>
      <input type="text" placeholder="请输入密码" password name="password"/>
    </view>
  </view>
  <button class="btn-submit" form-type="submit">登录</button>
</form>
<view class="error">{{errorMsg}}</view>
