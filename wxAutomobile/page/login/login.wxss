/* login.wxss */
.top-area{
  text-align: center;
}
.head-logo{
  width: 200rpx;
  height: 200rpx;
  margin: 50rpx 0;
}
.reg_form{
  padding: 0 30rpx;
  background-color: #fff;
}
.form_line{
  height: 100rpx;
  line-height: 100rpx;
  overflow: hidden;
}
.form_line input{
  height:50rpx;
  padding:25rpx 0;
  float: left;
}
.form_line .label{
  float: left;
  width: 150rpx;
}
.btn-submit{
  border: none;
  background-color: #2072cf;
  color: #fff;
  margin: 50rpx 30rpx;
}
.error{
  color:#ff0000;
  text-align: center;
}