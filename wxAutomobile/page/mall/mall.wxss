swiper{
  height: 400rpx;
}
.swiper-img{
  width: 100%;
  height: 100%;
}
.mall-list{
  background-color: #fff;
  padding: 20rpx 0;
}
.mall-list image{
  width: 45.5%;
  height: 200rpx;
  margin: 3% 0 0 3%;
}
.product{
  padding: 20rpx 30rpx;
  background-color: #fff;
}
.product .title{
  border-left:6rpx solid #2072cf;
  padding-left:10rpx;
}
.product-list{
  display: flex;
  flex-flow:row wrap;
  align-items:center;
  justify-content: space-between;
}
.product-item{
  width: 48%;
  margin-top: 30rpx;
}
.product-item image{
  height: 320rpx;
  width: 100%;
  background-color:#efefef;
  box-shadow:4rpx 12rpx 16rpx #bbb;
}