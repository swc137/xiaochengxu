<view class="bg-personal">
  <image src="{{userInfo.avatarUrl}}" class="icon-head"></image>
  <view class="bg-name">{{userInfo.nickName}}</view>
</view>
<view class="nav-list">
  <view class="v-line border-b" bindtap='toAct'>
    <view><image src='../../image/public/icon-hong.png' class="v-icon"></image>领取红包</view>
    <view class="right-arrow"></view>
  </view>
  <view class="v-line border-b" bindtap='toShare'>
    <view><image src='../../image/public/kan.png' class="v-icon"></image>查看砍价详情</view>
    <view class="right-arrow"></view>
  </view>
  <view class="v-line border-b" bindtap='callPhone' data-val="{{phone}}">
    <view><image src='../../image/public/icon-online.png' class="v-icon"></image>客服热线<view class="fr">{{phone}}</view></view>
    <view class="right-arrow"></view>
  </view>
  <view class="v-line border-b" bindtap='toAbout'>
    <view><image src='../../image/public/icon-ab.png' class="v-icon"></image>关于我们</view>
    <view class="right-arrow"></view>
  </view>
  <button open-type="getPhoneNumber" bindgetphonenumber="getPhoneNumber" class="btn-phone {{btn?'show':'hidden'}}">0</button>
</view>

