.contain{
  padding: 26rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.search-area{
  overflow: hidden;
  padding-top: 20rpx;
  position: relative;
  line-height: 60rpx;
}
.search{
  width: 97%;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #e5e5e5;
  border-radius: 60rpx;
  padding-left: 3%;
}
.icon-search{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 10rpx;
  top: 20rpx;
  z-index: 10
}
.icon-position{
  width: 30rpx;
  height: 30rpx;
  margin-top: 16rpx;
  margin-right: 10rpx;
  float: left;
}
swiper{
  height: 400rpx;
}
.swiper-img{
  width: 100%;
  height: 100%;
}
.t-area{
  background-color: #fff;
  padding-bottom: 26rpx;
}
.t-name{
  font-size: 30rpx;
  font-weight: 800;
  padding: 20rpx 0;
  text-align: center;
}
.t-item{
  display: inline-block;
  margin: 0 15rpx;
  position: relative;
}
.t-item image{
  width: 250rpx;
  height: 190rpx;
  display: block;
}
.t-item .t-title{
  position: absolute;
  bottom: 0;
  text-align: center;
  height: 50rpx;
  width: 100%;
  line-height: 50rpx;
  background-color: #000;
  opacity: 0.7;
  color: #fff;
}
.hot-news{
  background-color: #fff;
  margin-top: 20rpx;
  padding: 0 30rpx;
  padding-bottom: 30rpx;
}
swiper-item{
  position: relative;
}
.hot-des{
  width: 100%;
  height: 76rpx;
  line-height: 76rpx;
  padding-left: 30rpx;
  background-color: #9b9b9b;
  position: absolute;
  bottom: 0;
  color: #fff;
  opacity: 0.7;
}

.re-product{
  background-color: #fff;
  margin: 20rpx 0;
  padding-bottom: 30rpx;
}
.product-list{
  padding: 0 30rpx;
  display: flex;
  flex-flow:row wrap;
  justify-content:space-between;
}
.product-item{
  width: 48%;
  margin-bottom: 20rpx;
  font-size: 25rpx;
}
.product-item image{
  width: 100%;
  height: 200rpx;
}
.price{
  float: right;
  color: #ff6600;
}







.page-body-line{
  position:fixed;
  bottom:60rpx;
  right:20rpx;
  width:78rpx;
  height:78rpx;
  background-color: #2072cf;
  border-radius: 50%;
}
.page-body-line contact-button{
  position: absolute;
  top: 14rpx;
  left: 12rpx;
}