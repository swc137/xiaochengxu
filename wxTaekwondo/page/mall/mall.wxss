.classify{
  overflow: hidden;
}
.cl-left{
  float: left;
  height: 100%;
  width:30%;
  white-space:nowrap;
}
.t-item{
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  border-bottom: 1px solid #eee;
}
.t-item.active{
  background-color: #fff;
  border-left: 4rpx solid #2072cf;
}
.cl-right{
  float: left;
  width: 66%;
  height: 100%;
  background-color: #fff;
  padding: 2%;
  position: fixed;
  left: 30%;
  overflow: scroll;
  z-index: 100;
}
.r-list{
  display: flex;
  flex-flow:row wrap;
  justify-content:space-between;
}
.r-item{
  width: 48%;
}
.r-item image{
  width: 100%;
  height: 220rpx;
}
.r-text{
  width: 100%;
  text-align: center;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  margin-bottom: 10rpx;
}
.r-price{
  text-align: center;
  color: #ff6600;
}