swiper{
  height: 400rpx;
}
.swiper-img{
  width: 100%;
  height: 100%;
}
.menu{
  overflow: hidden;
  padding: 40rpx 0;
  background-color: #fff;
  display: flex;
  flex-wrap:wrap;
  justify-content:space-around;
}
.menu-item{
  width:120rpx;
  float:left;
  text-align:center;
  display:flex;
  flex-flow:column nowrap;
  align-items:center;
}
.menu-item image{
  width: 80rpx;
  height: 80rpx;
  display: block;
  box-shadow:4rpx 6rpx 8rpx #ddd;
  border-radius:50%;
}
.menu-item text{
  margin-top: 10rpx;
}
.accessory{
  position:relative;
  height: 300rpx;
}
.accessory .index1{
  width: 50%;
  height: 300rpx;
  position: absolute;
  top:0;
  left: 0;
}
.accessory .index2{
  width: 50%;
  height: 150rpx;
  position: absolute;
  top:0;
  right: 0;
}
.accessory .index3{
  width: 50%;
  height: 150rpx;
  position: absolute;
  bottom:0;
  right: 0;
}
.banner_center{
  width: 100%;
  height: 200rpx;
  margin-top: 28rpx;
}
.product{
  padding: 20rpx 30rpx;
  background-color: #fff;
}
.product-list{
  display: flex;
  flex-flow:row wrap;
  align-items:center;
  justify-content: space-between;
}
.product-item{
  width: 48%;
  margin-top: 30rpx;
}
.product-item image{
  height: 320rpx;
  width: 100%;
  background-color:#efefef;
  box-shadow:4rpx 12rpx 16rpx #bbb;
}

.page-body-line{
  position:fixed;
  bottom:60rpx;
  right:20rpx;
  width:78rpx;
  height:78rpx;
  background-color: #2072cf;
  border-radius: 50%;
}
.page-body-line contact-button{
  position: absolute;
  top: 14rpx;
  left: 12rpx;
}