/*产品图*/
swiper{
  height: 400rpx;
  margin-bottom: 20rpx;
}
.swiper-img{
  width: 100%;
  height: 100%;
}
/*一行显示*/
.v-line{
  padding: 20rpx 30rpx 20rpx 30rpx;
  background-color: #fff;
  position: relative;
  text-align: justify;
}
.about_text{
  text-indent: 2em;
  margin-top: 10rpx;
}
.v-title{
  font-size: 32rpx;
}
.v-icon{
  width: 44rpx;
  height: 44rpx;
  vertical-align: middle;
  margin-right: 6rpx;
}
.right-arrow {
  position: absolute;
  width: 20rpx;
  height: 20rpx;
  top: 0;
  bottom: 0;
  margin: auto;
  right: 30rpx;
  border: none;
  border-left: 0;
  border-bottom: 0;
  border-top: 1px solid #969696;
  border-right: 1px solid #969696;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}
.company_about{
  margin-bottom: 20rpx;
}
/*产品*/
.product{
  background: #fff;
  margin: 20rpx 0;
}
.product-list2{
  padding: 0 30rpx 30rpx;
}
.product-item{
  width: 100%;
  margin-top: 30rpx;
  overflow: hidden;
}
.product-item image{
  height: 260rpx;
  width: 40%;
  float: left;
  background-color:#efefef;
  border: 2rpx solid #ddd;
}
.product-item .item-title{
  width: 54%;
  float: left;
  margin-left: 4%;
}