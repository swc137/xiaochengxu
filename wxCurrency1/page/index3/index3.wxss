/*产品图*/
swiper{
  height: 400rpx;
}
.swiper-img{
  width: 100%;
  height: 100%;
}
/*热门商品*/
.product-list{
  background: #fff;
  margin-top: 20rpx;
  padding-top: 20rpx;
}
.product-list .pro-title{
  color: #42ab49;
  border-bottom: 4rpx solid #42ab49;
  padding-bottom: 4rpx;
  margin-left: 30rpx;
}
.list{
  display: flex;
  flex-flow:row wrap;
  align-items:center;
  justify-content: space-between; 
  padding: 30rpx 30rpx 0;
}
.product-item{
  width: 48%;
  padding-bottom: 20rpx;
}
.product-item image{
  width: 100%;
  height: 330rpx;
  background: #eee;
}
.loading{
  width: 100%;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  color: #999;
}